# ===========================================
# Production Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Django Settings
SECRET_KEY='your-super-secret-production-key-change-this'
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Database Configuration
POSTGRES_USER=finance_user
POSTGRES_PASSWORD=your-secure-database-password
POSTGRES_DB=finance_db
DATABASE_URL=postgres://finance_user:your-secure-database-password@db:5432/finance_db

# Email Configuration (for password reset, notifications, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Optional: Demo user setup (set to False in production)
SETUP_DEMO_USER=False

# Optional: Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# Optional: Razorpay for payments
# RAZORPAY_KEY_ID=your-razorpay-key
# RAZORPAY_KEY_SECRET=your-razorpay-secret

# Optional: reCAPTCHA
# RECAPTCHA_PUBLIC_KEY=your-recaptcha-public-key
# RECAPTCHA_PRIVATE_KEY=your-recaptcha-private-key
